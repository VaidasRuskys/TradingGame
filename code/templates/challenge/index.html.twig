{% extends 'base.html.twig' %}

{% block title %}Challenge for stock {{ stock }} at {{ price }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Challenge for stock {{ stock }} at {{ price }}</h1>

    Your choice
    <form action="{{ path('challenge_choice') }}" method="post" >
        <input type="hidden" name="day_challenge_id" value="{{ dayChallengeId }}">
        <button type="submit" name="action" value="buy">Buy</button>
        <button type="submit" name="action" value="sell">Sell</button>
    </form>
</div>
{% endblock %}
